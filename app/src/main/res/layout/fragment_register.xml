<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/img_register"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/bBack"
                    android:src="@drawable/ic_keyboard_backspace_black_24dp"
                    android:tint="@color/colorWhite"
                    android:padding="5dp"
                    android:background="@drawable/ripple_circle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginTop="60dp"
                    android:layout_marginLeft="10dp"
                    android:text="Register"
                    android:textColor="@color/textDarkPrimary"
                    android:textSize="28sp"
                    android:fontFamily="sans-serif-light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <TextView
                android:textSize="18sp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/textDarkDisabled"
                android:text="@string/app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/eNama"
                style="@style/RoundElegantEdittext"
                android:drawableLeft="@drawable/ic_person_black_24dp"
                android:hint="Nama Lengkap"
                android:inputType="textCapWords"
                android:layout_marginTop="50dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/ePassword"
                style="@style/RoundElegantEdittext"
                android:drawableLeft="@drawable/ic_lock_black_24dp"
                android:hint="Password"
                android:inputType="textPassword"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/eKonPassword"
                style="@style/RoundElegantEdittext"
                android:drawableLeft="@drawable/ic_lock_black_24dp"
                android:hint="Konfirmasi Password"
                android:inputType="textPassword"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/eEmail"
                style="@style/RoundElegantEdittext"
                android:drawableLeft="@drawable/ic_mail_black_24dp"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/eNoTelp"
                style="@style/RoundElegantEdittext"
                android:drawableLeft="@drawable/ic_local_phone_black_24dp"
                android:hint="Phone Number"
                android:inputType="number"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/eAlamat"
                style="@style/RoundElegantEdittext"
                android:drawableLeft="@drawable/ic_location_on_black_24dp"
                android:hint="Address"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/bRegister"
                android:text="Register"
                style="@style/ButtonLineRoundedWhiteQu"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="40dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>